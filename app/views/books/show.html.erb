<div class="container">
    <div class="row">
        <p id="notice"><%= notice %></p>

        <%if @book.errors.any? %>
<div class="error">
<h2><%= @book.errors.count %>errors prohibited this obj from being saved</h2>
<ul>
  <% @book.errors.full_messages.each do |message| %>
  <li class="error-message"><%= message %></li>
  <%end%>
</ul>
</div>
<%end%>
        <div class="col-md-3">
<%= render 'users/list', user:@user %>
<%= render 'books/list', book:@book %>
</div>
<div class="col-md-9">
<h1>Book detail</h1>
<table class="table table-striped">



        <tr>
            <td><%=attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"  %></td>
            <td><%= link_to @user.name, user_path(@user) %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>

              <% if @book.user == current_user %>
                <td><%= link_to "edit",edit_book_path(@book),class: 'btn btn-success' %></td>
                <td><%= link_to "destroy",book_path(@book) ,method: :delete,class: 'btn btn-danger', "data-confirm"=>"Are you sure?" %></td>
              <% end%>

        </tr>


</table>
</div>
</div>
</div>